{{>header}}

    <div class="article det">
        <ul class="list">
            <li>
                <div><h2>{{post.title}}</h2></div>
                {{#if user}}
                    {{#if op}}
                        <div class="edit">
                            <a href="/edit/{{post.id}}" class="edit">编辑</a> |
                            <a href="/remove/{{post.id}}" class="edit">删除</a>
                        </div>
                    {{/if}}
                {{/if}}
                <div class="info">
                    作者：<a href="/user/{{post.userName}}">{{post.userName}}</a> | 日期：{{post.time}} | 阅读:{{post.pv}} | 评论：{{comments.length}}
                </div>

                {{#if post.tags}}
                <div class="tags">
                    <span>标签：</span>
                    {{#each post.tags}}
                    <a href="/tags/{{.}}" class="tag">{{.}}</a>
                    {{/each}}
                </div>
                {{/if}}
                
                <div class="post">{{post.content}}</div>
            </li>
        </ul>

        {{> comments }}

    </div>

{{>footer}}