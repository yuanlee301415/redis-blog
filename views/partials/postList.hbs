<ul class="list">
    {{#each posts as |post|}}
    <li>
        <p><a href="/article/{{post.id}}">{{post.title}}</a></p>
        <div class="info">
            作者：<a href="/user/{{ post.userName }}">{{ post.userName }}</a> | 日期：{{ post.time }} | 阅读:{{post.pv}} | 评论：{{post.commentCnt}} | 转载：{{post.reprintCnt}}
        </div>
        {{#if post.tags}}
        <div class="tags">
            <span>标签：</span>
            {{#each post.tags as |tag|}}
                <a href="/tags/{{tag.name}}" class="tag{{#if tag.curr}} curr{{/if}}">{{tag.name}}</a>
            {{/each}}
        </div>
        {{/if}}
        <div class="post">{{ post.content }}</div>
    </li>
    {{/each}}
</ul>
{{> page}}