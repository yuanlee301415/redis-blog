<ul class="list">
    <% posts.forEach(function(post){%>
    <li>
        <h2 class="title"><a href="/article/<%=post.user.name%>/<%= post._id %>"><%= post.title %></a></h2>
        <div class="info">
            作者：<a href="/user/<%= post.user.name %>"><%= post.user.name %></a> | 日期：<%= post.time %> | 阅读:<%=post.pv%> | 评论：<%=post.comments.length%>
        </div>
        <%if(post.tags.length){%>
        <div class="tags">
            <span>标签：</span>
            <%post.tags.forEach(function(tag){%>
            <a href="/tag/<%=tag%>" class="tag"><%=tag%></a>
            <%});%>%>
        </div>
        <%}%>
        <div class="post"><%- post.desc %></div>
    </li>
    <%});%>
</ul>
<%- include page %>